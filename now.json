{
    "version": 2,
    "builds": [
        {
            "src": "src/*",
            "use": "@now/static"
        },
        {
            "src": "public/*",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/(?<url>.*)",
            "dest": "/src/$url"
        },
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ]
}