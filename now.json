{
    "version": 2,
    "builds": [
        {
            "src": "src/*",
            "use": "@now/static"
        },
        {
            "src": "public/*",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/src/index.html"
        },
        {
            "src": "/index.js",
            "dest": "/src/index.js"
        },
        {
            "src": "/rw-widgets.(?<ext>)",
            "dest": "/src/rw-widgets.$ext"
        },
        {
            "src": "/(*.html)",
            "dest": "/src/index.html"
        }
    ]
}